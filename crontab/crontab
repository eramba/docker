@hourly export $(cat -e "/proc/1/environ" | sed 's/\^@/\n/g' | grep 'CACHE\|HOST\|DB_') && /bin/sh /var/www/eramba/app/upgrade/bin/cake cron job hourly >> /var/log/cron.log 2>&1
@daily export $(cat -e "/proc/1/environ" | sed 's/\^@/\n/g' | grep 'CACHE\|HOST\|DB_') && /bin/sh /var/www/eramba/app/upgrade/bin/cake cron job daily >> /var/log/cron.log 2>&1
@yearly export $(cat -e "/proc/1/environ" | sed 's/\^@/\n/g' | grep 'CACHE\|HOST\|DB_') && /bin/sh /var/www/eramba/app/upgrade/bin/cake cron job yearly >> /var/log/cron.log 2>&1
*/1 * * * * export $(cat -e "/proc/1/environ" | sed 's/\^@/\n/g' | grep 'CACHE\|HOST\|DB_') && /bin/sh /var/www/eramba/app/upgrade/bin/cake queue run -v >> /var/log/cron.log 2>&1
# remember to end this file with an empty new line
